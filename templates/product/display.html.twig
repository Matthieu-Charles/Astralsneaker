{% extends 'base.html.twig' %}

{% block title %}Astrasneaker | Accueil
{% endblock %}

{% block body %}

<div id="carouselExampleInterval" class="carousel slide" data-bs-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active" data-bs-interval="10000">
      <img src="templates\product\pic_test.jpg" class="d-block w-100" alt="...">
    </div>
    <div class="carousel-item" data-bs-interval="2000">
      <img src="..." class="d-block w-100" alt="...">
    </div>
    <div class="carousel-item">
      <img src="..." class="d-block w-100" alt="...">
    </div>
  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleInterval" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleInterval" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>

{# affichage des fiches produits #}
<div class="row row-cols-1 row-cols-md-2  row-cols-lg-3 g-4 mt-5">
	{% for product in products %}

	<div class="col">
		<div class="card">
			<img src="..." class="card-img-top" alt="...">
			<div class="card-body">
				<h5 class="card-title">{{ product.name }}</h5>
				<p class="card-text">{{ product.description }}</p>
				<a href="#" class="btn btn-primary">Fiche produit</a>
			</div>
		<div class="card-footer">
			<small class="text-muted">Stock : {{product.stock}}</small>
		</div>
		</div>
	</div>
	{% endfor %}
</div>


<div class="my-3 text-end">
		{% if previous >= 0 %}
		<a href="{{ path('app_accueil', { offset: previous }) }}" class="btn btn-sm btn-primary"><<</a>
		{% endif %}
		Il y a {{ products|length~' produit'~( products|length > 1 ? 's' : '') }}
		{% if next < products|length %}
		<a href="{{ path('app_accueil', { offset: next }) }}" class="btn btn-sm btn-primary">>></a>
		{% endif %}
</div>



{% endblock %}

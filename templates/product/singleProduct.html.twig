{% extends 'base.html.twig' %}

{% block title %}
  Astrasneaker | {{ product.name }}
{% endblock %}

{% block body %}
  <div class="container my-4">
    <div class="card">
      <div class="card-body">

        <div class="row mt-5">
          <div class="col-xl-6 px-5 my-4">
            <div class="white-box text-center">
              {% if product.stock < 10 %}
							<div class="position-absolute px-2 mt-3 bg-danger shadow rounded-end text-white">Plus que {{product.stock}} ex. en stock!</div>
							{% endif %}
              <img src="{{ photourl ~ '/' ~ product.photoFileName }}"
                class="img-fluid rounded shadow" />
            </div>
          </div>
          <div class="col-xl-6 px-5 my-4">
            <h6 class="card-subtitle fst-italic brand-title">
              {{ product.brand }}
            </h6>
            <h3 class="card-title fs-1 fw-bold">
              {{ product.name }}
            </h3>
            <h2 class="m fs-1">
              {{ product.price }}€
            </h2>
            <form>
                <div>
                    <label for="size_search" class="me-2 fst-italic">Pointure</label>
                    <select class="form-select form-select-sm"   style="width: 70px" id="size_search" aria-label=".form-select-sm example" name="size_search" required>
                    {% for size in sizes %}
                      <option value="{{size}}" {{size == size_search ? 'selected' : null}}>{{size}}</option>
                    {% endfor %}
                    </select>
                </div>
                <div class="mt-3">
                  <button class="btn btn-dark btn-rounded"
                    type="submit"
                    formaction="{{ path('cart_add', {id: product.id})}}"
                    data-toggle="tooltip"
                    title=""
                    data-original-title="Add to cart">
                    <i class="bi bi-cart"></i>
                  </button>
                  <button class="btn btn-primary btn-rounded" type="submit" formaction="{{ path('productslist')}}">Acheter</button>
                </div>
              </form>
          </div>
        </div>

        <div class="row mx-4 my-5 pt-4 border-top">
          <div class="col-lg-8">
            <h4 class="box-title my-3">
              Description
            </h4>
            <div class="pe-5">            
                {{ product.description | raw}}
            </div>
          </div>
          <div class="col-lg-4">
            <h5 class="box-title mt-3">
              Points-clés
            </h5>
            <ul class="list-unstyled">
              <li><i class="bi bi-check-circle bi-c-pr"></i> Cuir de Normandie</li>
              <li><i class="bi bi-check-circle bi-c-pr"></i> Conçue en France</li>
              <li><i class="bi bi-check-circle bi-c-pr"></i> Garantie à vie*</li>
            </ul>
            </div>
        </div>

      </div>
    </div>
  </div>

{% endblock %}
